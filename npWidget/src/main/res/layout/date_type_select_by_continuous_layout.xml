<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="36dp">

    <RadioGroup
        android:id="@+id/date_type_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="1dp">

        <RadioButton
            android:id="@+id/date_type_day"
            style="@style/match"
            android:layout_weight="1"
            android:background="@drawable/date_type_default_selector_left"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="日"
            android:textColor="@drawable/date_type_text_selector"
            android:textSize="12sp" />

        <View
            android:id="@+id/date_type_day_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/date_type_week"
            style="@style/match"
            android:layout_weight="1"
            android:background="@drawable/date_type_default_selector_center"
            android:button="@null"
            android:gravity="center"
            android:text="周"
            android:textColor="@drawable/date_type_text_selector"
            android:textSize="12sp" />

        <View
            android:id="@+id/date_type_week_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/date_type_month"
            style="@style/match"
            android:layout_weight="1"
            android:background="@drawable/date_type_default_selector_center"
            android:button="@null"
            android:gravity="center"
            android:text="月"
            android:textColor="@drawable/date_type_text_selector"
            android:textSize="12sp" />

        <View
            android:id="@+id/date_type_month_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/date_type_year"
            style="@style/match"
            android:layout_weight="1"
            android:background="@drawable/date_type_default_selector_right"
            android:button="@null"
            android:gravity="center"
            android:text="年"
            android:textColor="@drawable/date_type_text_selector"
            android:textSize="12sp" />

    </RadioGroup>

</LinearLayout>
